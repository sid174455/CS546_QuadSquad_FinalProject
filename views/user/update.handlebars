<h2 class="page-header">Update Book from public library by ISBN </h2>
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}
<form method="post" action="/users/update">
    
    <div class="form-group">
        <label>Book ISBN</label>
        <input type = "number" class = "form-control" name = "bookISBN" placeholder="ISBN of the book">
    </div>
    
    <div class="form-group">
    <label>Book edition</label>
    <input type="number" class="form-control" name="edition" placeholder="Edition of the book">
    </div>

    <div class="form-group">
    <label>URL</label>
    <input type="url" class="form-control" name="url" placeholder="Provide URL of the book">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>