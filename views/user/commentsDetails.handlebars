<h2 class="page-header">Add Comments</h2>
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}
<form method="post" action="/users/commentsDetails">
    <div class="form-group">
        <label>Comment:</label>
        <input type = "text" class = "form-control" name="comment" placeholder="Write your comments">
    </div>
    <div class="form-group">
        <label>Book ISBN:</label>
        <input type="text" class="form-control" name="ISBN" placeholder="Provide ISBN of the book">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>